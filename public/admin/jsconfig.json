{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES2020",
    "checkJs": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "./scripts/*": ["./scripts/*"],
      "./widgets/*": ["./widgets/*"]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "react"
    ]
  }
}
