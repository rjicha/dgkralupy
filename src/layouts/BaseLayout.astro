---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Gymnázium Kralupy' } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-primary-600 text-white py-4">
      <div class="container mx-auto px-4">
        <h1 class="text-2xl font-bold">Gymnázium Kralupy</h1>
        <nav class="mt-2">
          <a href="/" class="text-white hover:underline mr-4">Domů</a>
          <!-- Navigation will be expanded once we have the structure from Phase 0 -->
        </nav>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-100 py-6 mt-12">
      <div class="container mx-auto px-4 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} Gymnázium Kralupy. Všechna práva vyhrazena.</p>
      </div>
    </footer>
  </body>
</html>
